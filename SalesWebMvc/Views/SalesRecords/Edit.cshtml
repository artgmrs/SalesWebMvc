@model SalesWebMvc.Models.ViewModels.SaleRecordViewModel

@{
    ViewData["Title"] = "Edit";
}

<hr />
<h2>Edit Sale</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="SalesRecord.Id" />
            <div class="form-group">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" name="Date" />

                <span asp-validation-for="SalesRecord.Date" class="text-danger">

                </span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <input asp-for="SalesRecord.Amount" class="form-control" name="Amount" />
                <span asp-validation-for="SalesRecord.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <select asp-for="SalesRecord.Status" asp-items="Html.GetEnumSelectList<SalesWebMvc.Models.Enums.SaleStatus>()" class="form-control" name="Status"></select>
                <span asp-validation-for="SalesRecord.Status" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.SellerId" class="control-label"></label>
                <select asp-for="SalesRecord.SellerId" class="form-control" asp-items="@(new SelectList(Model.Seller,"Id","Name"))" name="SellerId"></select>
                <span asp-validation-for="SalesRecord.SellerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">Back to list</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
