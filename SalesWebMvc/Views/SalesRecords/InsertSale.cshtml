@model SalesWebMvc.Models.ViewModels.SellersViewModel

@{
    ViewData["Title"] = "InsertSale";
}

<h2>InsertSale</h2>

<h4>SalesRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertSale">
            <div class="form-group">
                <label asp-for="SaleRecord.Date" class="control-label"></label>
                <input asp-for="SaleRecord.Date" class="form-control" />
                <span asp-validation-for="SaleRecord.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleRecord.Amount" class="control-label"></label>
                <input asp-for="SaleRecord.Amount" class="form-control" />
                <span asp-validation-for="SaleRecord.Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SaleRecord.Status" class="control-label"></label>
                <select asp-for="SaleRecord.Status" asp-items="Html.GetEnumSelectList<SalesWebMvc.Models.Enums.SaleStatus>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="SaleRecord.Status" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="SaleRecord.SellerId" class="control-label"></label>
                <select asp-for="SaleRecord.SellerId" asp-items="@(new SelectList(Model.Sellers,"Id","Name"))" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="SaleRecord.Seller" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="InsertSale" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
